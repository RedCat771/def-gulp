{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "prettier", "airbnb/base"],
  "plugins": ["node"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "indent": ["error", 4, { "SwitchCase": 1 }],
    "no-mixed-spaces-and-tabs": ["error", "smart-tabs"],
    // "linebreak-style": ["error", "unix"],
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "prefer-destructuring": "off"
  }
}
